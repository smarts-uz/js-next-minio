generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum FileStatus {
  pending
  uploaded
  failed
}

enum FileExposure {
  private
  public
}

model File {
  id           String     @id @default(uuid())
  bucket       String?
  fileName     String?
  originalName String?
  size         Float?
  status       FileStatus @default(pending)
  exposure     FileExposure @default(public)
  url          String?
  createdAt    DateTime   @default(now())
}
